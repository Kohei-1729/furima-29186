<%# CSS・・・assets/stylesheets/shared/header.css %>
<header>
  <div class='top-page-header'>
    <div class='search-bar-contents'>
      <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>
      <form class="search-form" action="#">
        <input class='input-box' placeholder='キーワードから探す'>
        <button class="search-button">
          <%= image_tag "search.png", class:"search-icon" %>
        </button>
      </form>
    </div>
    <div class='nav'>
      <ul class='lists-left'>
        <li><%= link_to 'カテゴリー', "#", class: "category-list" %></li>
        <li><%= link_to 'ブランド', "#", class: "brand-list" %></li>
      </ul>
      <ul class='lists-right'>
        <% if user_signed_in?%>
        <li><%= link_to current_user.nickname, "item_favorites_path", class: "user-nickname" %></li> 
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="category-pull-down">
    <ul class="show-lists hidden" id="pull-down" style="display:none;">
      <li class="pull-down-list"><%= link_to 'レディース', category_items_path(category_id: 1) %></li>
      <li class="pull-down-list"><%= link_to 'メンズ', category_items_path(category_id: 2) %></li>
      <li class="pull-down-list"><%= link_to 'ベビー・キッズ', category_items_path(category_id: 3) %></li>
      <li class="pull-down-list"><%= link_to 'インテリア・住まい・小物', category_items_path(category_id: 4) %></li>
      <li class="pull-down-list"><%= link_to '本・音楽・ゲーム', category_items_path(category_id: 5) %></li>
      <li class="pull-down-list"><%= link_to 'おもちゃ・ホビー・グッズ', category_items_path(category_id: 6) %></li>
      <li class="pull-down-list"><%= link_to '家電・スマホ・カメラ', category_items_path(category_id: 7) %></li>
      <li class="pull-down-list"><%= link_to 'スポーツ・レジャー', category_items_path(category_id: 8) %></li>
      <li class="pull-down-list"><%= link_to 'ハンドメイド', category_items_path(category_id: 9) %></li>
      <li class="pull-down-list"><%= link_to 'その他', category_items_path(category_id: 10) %></li>
    </ul>
  </div>
</header>